<article class="resort">
  <div class="resort-title opacity">
    <h2>{{resort.resort_title}}</h2>
  </div>
  
  <div class="resort-content opacity">
    <p>{{resort.resort_content}}</p>
  </div>
  
  <div class="resort-snowfall opacity">
    <p>Average annual snowfall is {{resort.annual_snowfall}}</p>
  </div>

  <div class="resort-map opacity">
  <img src="{{resort.url}}" alt="{{resort.resort_title}}">
  </div>

</article>

{{#if loggedIn}}

<form class="review-form">
  <div>
    <textarea class="opacity" id="review-body"></textarea>
  </div>

  <div>
    <button class="addReview" type="submit">Add Review</button>
  </div>
</form>

<card class="reviews">
  {{#each resort.reviews}}
  <article class="opacity" id="review-data">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{review_text}}
    </div>
  </article>
  {{/each}}
</card>

{{/if}}




{{#if loggedIn}}

<script src="/javascript/add-review.js"></script>

{{/if}}

