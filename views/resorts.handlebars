<article class="resort">
  <div class="resort-title">

    <h2>
      {{resort.resort_title}}
    </h2>

  </div>
  
  <div class="resort-content">
    <p>{{resort.resort_content}}</p>
  </div>
  
  <div class="resort-snowfall">
    <p>{{resort.annual_snowfall}}</p>
  </div>
  
  <div class="meta">
    {{!-- {{post.vote_count}} point(s) by {{post.user.username}} on
    {{post.created_at}}
    | --}}
    <a href="/resort/{{resort.id}}">{{resort.reviews.length}} reviews(s)</a>
  </div>
</article>

<form class="review-form">
  <div>
    <textarea name="review-body"></textarea>
  </div>

  <div>

    <button class="addReview" type="submit">Add Review</button>

  </div>
</form>

<div class="reviews">
  {{#each resort.reviews}}
  <section class="review">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{reviews_text}}
    </div>
  </section>
  {{/each}}
</div>